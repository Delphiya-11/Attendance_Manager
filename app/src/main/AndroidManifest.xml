<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.attendancemanager">


    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".AttendanceManager"
        android:allowBackup="true"
        android:icon="@mipmap/dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RecyclerViewActivity"></activity>
        <activity android:name=".ScancamActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".LogoutActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".SplashRegisterActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".ViewActivity" />
        <activity android:name=".ScanActivity" />
        <activity android:name=".StudentRegisterActivity"
            />
        <activity android:name=".StudentOptionActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".StudentActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".DepartmentActivity"></activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PercentageActivity" />
        <activity android:name=".ActionActivity" />
        <activity android:name=".YearActivity" />
        <activity android:name=".VerifyActivity" />
        <activity android:name=".SubjectActivity" />
        <activity android:name=".TeacherActivity"/>

        <activity android:name=".Main3Activity"></activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".MainActivityx"/>

    </application>

</manifest>